    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Core Decision",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/core-decision/",
            "program": "manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8080",
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "cwd": "${fileDirname}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}